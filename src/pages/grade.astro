// --- IMPORTS ---
import plmLogo from "../assets/PLMLogo.webp";
import "../styles/global.css";
import { Image } from "astro:assets";

// --- 1. TYPE DEFINITIONS ---
interface StudentProfile {
    firstName: string;
    lastName: string;
    studentId: string;
}

interface BreakdownItem {
    name: string;
    score: string; // e.g. "50/50"
    percentage: string; // e.g. "20%"
    isSubItem?: boolean; // For indentation like Quiz #1 under Quizzes
}

interface GradeItem {
    code: string;
    section: string;
    description: string;
    units: number;
    grade: string; // "1.00", "1.25", etc.
    remarks: "Passed" | "Failed" | "Incomplete" | "Dropped" | "Enrolled";
    breakdown?: BreakdownItem[]; // New optional field for the modal details
}

// --- 2. FETCH DATA ---

async function fetchStudentProfile(): Promise<StudentProfile> {
    return { firstName: "EMMANUEL A.", lastName: "PEREZ", studentId: "202390029" };
}

// Simulated Grade Database
const gradeDatabase: Record<string, Record<string, GradeItem[]>> = {
    "2024-2025": {
        "First Semester": [
            { 
                code: "CS 111", 
                section: "1", 
                description: "INTRODUCTION TO COMPUTING", 
                units: 3, 
                grade: "1.25", 
                remarks: "Passed",
                // Added detailed breakdown for this subject
                breakdown: [
                    { name: "Midterms Exam", score: "48/50", percentage: "20%" },
                    { name: "Final Exam", score: "47/50", percentage: "20%" },
                    { name: "Quizzes", score: "175/180", percentage: "30%" },
                    { name: "Quiz #1", score: "58/60", percentage: "10%", isSubItem: true },
                    { name: "Quiz #2", score: "59/60", percentage: "10%", isSubItem: true },
                    { name: "Quiz #3", score: "58/60", percentage: "10%", isSubItem: true },
                    { name: "Project", score: "98/100", percentage: "15%" },
                    { name: "Class Standing", score: "95/100", percentage: "15%" },
                    { name: "Total Percentage", score: "", percentage: "100%" }
                ]
            },
            { code: "CS 112", section: "1", description: "COMPUTER PROGRAMMING 1", units: 3, grade: "1.50", remarks: "Passed" },
            { code: "GEC 001", section: "2", description: "UNDERSTANDING THE SELF", units: 3, grade: "1.00", remarks: "Passed" },
            { code: "PE 001", section: "5", description: "PATH-FIT 1", units: 2, grade: "1.00", remarks: "Passed" }
        ],
        "Second Semester": [
            { code: "CS 121", section: "1", description: "COMPUTER PROGRAMMING 2", units: 3, grade: "1.75", remarks: "Passed" },
            { code: "CS 122", section: "1", description: "DISCRETE STRUCTURES 1", units: 3, grade: "2.00", remarks: "Passed" }
        ]
    },
    "2025-2026": {
        "First Semester": [] 
    }
};

// --- 3. LOGIC ---
const yearParam = Astro.url.searchParams.get('year');
const semParam = Astro.url.searchParams.get('sem');
const showTable = !!yearParam && !!semParam;

const currentYear = yearParam || "2024-2025";
const currentSem = semParam || "First Semester";

const studentData = await fetchStudentProfile();
const gradeData = showTable ? (gradeDatabase[currentYear]?.[currentSem] || []) : [];

// Calculate GWA (Weighted Average)
let totalUnits = 0;
let totalGradePoints = 0;
let gwa = "0.0000";

if (gradeData.length > 0) {
    gradeData.forEach(item => {
        const numericGrade = parseFloat(item.grade);
        if (!isNaN(numericGrade)) {
            totalUnits += item.units;
            totalGradePoints += (numericGrade * item.units);
        }
    });
    if (totalUnits > 0) {
        gwa = (totalGradePoints / totalUnits).toFixed(4);
    }
}
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PLM Student Portal - Grades</title>
    <link rel="icon" href={plmLogo.src} />
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@700&family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body class="bg-white font-sans min-h-screen flex flex-col text-gray-800">


   <!-- HEADER SECTION -->
    <header class="w-full bg-white shadow-sm z-50">
        <div class="flex justify-center py-4">
            <div class="w-15 h-15">
                 <Image src={plmLogo} alt="PLM Logo" class="w-full h-full object-contain" loading="eager" />
            </div>
        </div>
<div class="h-5 w-full bg-plm-navy border-b-9 border-[#991B1B]"></div>
        <nav class="border-y border-gray-200 py-2">
            <div class="max-w-7xl mx-auto px-4 flex justify-around md:justify-center md:gap-12 text-sm font-medium text-gray-700">
                <a href="/dashboard" class="px-6 py-2 rounded hover:text-plm-navy hover:bg-plm-navy/10 transition-all">Home</a>
                <a href="/student_schedule" class="px-6 py-2 rounded hover:text-plm-navy hover:bg-plm-navy/10 transition-all">Schedule</a>
                <a href="/grade" class="bg-plm-navy text-white px-6 py-2 rounded shadow-sm hover:bg-opacity-90 transition-all">Grade</a>
                <a href="/enrollment" class="px-6 py-2 rounded hover:text-plm-navy hover:bg-plm-navy/10 transition-all">Enrollment</a>
                <a href="/personalinfo" class="px-6 py-2 rounded hover:text-plm-navy hover:bg-plm-navy/10 transition-all">Personal Info</a>
                <a href="/change-password" class="px-6 py-2 rounded hover:text-plm-navy hover:bg-plm-navy/10 transition-all">Change Password</a>
            </div>
        </nav>

        <div class="bg-white border-b border-plm-gold/50 py-2">
            <div class="max-w-7xl mx-auto px-4 flex justify-between items-center text-sm">
                <span class="text-gray-800">
                    Signed in as: <span class="font-bold uppercase">{studentData.lastName}, {studentData.firstName}</span> <span class="font-bold">({studentData.studentId})</span>
                </span>
                <button class="text-[#991B1B] font-bold hover:underline text-xs tracking-wide">SIGN OUT</button>
            </div>
        </div>
    </header>

    <!-- MAIN CONTENT -->
    <main class="flex-grow w-full max-w-6xl mx-auto p-6 md:p-8 relative">
        
        <h1 class="text-center text-2xl font-bold text-plm-navy mb-8 uppercase tracking-wide">My Grade</h1>

        <!-- FILTERS -->
        <div class="flex flex-col md:flex-row justify-center items-center gap-4 mb-8">
            <div class="flex items-center gap-2">
                <label for="school-year" class="text-sm font-semibold text-plm-navy">School Year:</label>
                <div class="relative">
                    <select id="school-year" class="appearance-none border border-plm-gold text-sm rounded px-4 py-1.5 pr-8 bg-white focus:outline-none focus:ring-1 focus:ring-plm-gold w-40 cursor-pointer">
                        <option value="2025-2026" selected={currentYear === "2025-2026"}>2025-2026</option>
                        <option value="2024-2025" selected={currentYear === "2024-2025"}>2024-2025</option>
                    </select>
                    <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-500">
                        <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
                    </div>
                </div>
            </div>

            <div class="flex items-center gap-2">
                <label for="semester" class="text-sm font-semibold text-plm-navy">Semester:</label>
                <div class="relative">
                    <select id="semester" class="appearance-none border border-plm-gold text-sm rounded px-4 py-1.5 pr-8 bg-white focus:outline-none focus:ring-1 focus:ring-plm-gold w-40 cursor-pointer">
                        <option value="First Semester" selected={currentSem === "First Semester"}>First Semester</option>
                        <option value="Second Semester" selected={currentSem === "Second Semester"}>Second Semester</option>
                    </select>
                    <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-500">
                        <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
                    </div>
                </div>
            </div>

            <button id="confirm-btn" class="bg-[#1e1e2f] hover:bg-plm-navy text-white text-sm font-medium py-1.5 px-6 rounded shadow-sm transition-colors ml-2 cursor-pointer min-w-[140px]">
                {showTable ? "Switch View" : "Confirm"}
            </button>
        </div>

        {showTable ? (
            <div class="animate-fade-in">
                <div class="overflow-x-auto border border-plm-gold mb-8">
                    <table class="w-full text-sm text-left">
                        <thead class="bg-[#7F1D1D] text-white uppercase text-xs font-bold">
                            <tr>
                                <th class="py-2 px-3 border-r border-[#B8860B] w-10 text-center">#</th>
                                <th class="py-2 px-3 border-r border-[#B8860B]">Subject Code</th>
                                <th class="py-2 px-3 border-r border-[#B8860B]">Section</th>
                                <th class="py-2 px-3 border-r border-[#B8860B] w-1/3">Description</th>
                                <th class="py-2 px-3 border-r border-[#B8860B] w-16 text-center">Units</th>
                                <th class="py-2 px-3 border-r border-[#B8860B] w-16 text-center">Grade</th>
                                <th class="py-2 px-3">Remarks</th>
                            </tr>
                        </thead>
                        <tbody class="text-gray-900">
                            {gradeData.length > 0 ? gradeData.map((item, index) => (
                                <tr class="border-b border-plm-gold/30 hover:bg-gray-50 transition-colors">
                                    <td class="py-2 px-3 border-r border-plm-gold/50 text-center font-bold">{index + 1}</td>
                                    
                                    <!-- SUBJECT CODE BUTTON: Opens Modal -->
                                    <td class="py-2 px-3 border-r border-plm-gold/50 font-bold">
                                        <button 
                                            class="text-blue-700 hover:text-plm-navy hover:underline focus:outline-none view-breakdown-btn text-left"
                                            data-title={`${item.code} - ${item.description}`}
                                            data-grade={item.grade}
                                            data-breakdown={JSON.stringify(item.breakdown || [])}
                                            disabled={!item.breakdown}
                                            title={item.breakdown ? "Click to view breakdown" : "No breakdown available"}
                                        >
                                            {item.code}
                                        </button>
                                    </td>
                                    
                                    <td class="py-2 px-3 border-r border-plm-gold/50 text-center">{item.section}</td>
                                    <td class="py-2 px-3 border-r border-plm-gold/50">{item.description}</td>
                                    <td class="py-2 px-3 border-r border-plm-gold/50 text-center font-bold">{item.units}</td>
                                    <td class="py-2 px-3 border-r border-plm-gold/50 text-center font-bold text-black">{item.grade}</td>
                                    <td class={`py-2 px-3 font-bold uppercase text-xs ${item.remarks === 'Passed' ? 'text-green-700' : 'text-red-600'}`}>
                                        {item.remarks}
                                    </td>
                                </tr>
                            )) : (
                                <tr>
                                    <td colspan="7" class="py-12 text-center text-gray-500 italic bg-gray-50">
                                        No grades available for {currentYear} - {currentSem}.
                                    </td>
                                </tr>
                            )}
                        </tbody>
                    </table>
                </div>

                <!-- GWA FOOTER -->
                <div id="gwa-footer" class="w-full bg-[#7F1D1D] text-white py-3 px-6 shadow-md cursor-pointer transition-colors hover:bg-[#991B1B] group">
                    <div class="flex items-center justify-center w-full relative">
                        <span class="font-bold flex items-center gap-2">
                            GWA: <span class="text-xl">{gwa}</span>
                        </span>
                        <span id="gwa-icon" class="absolute right-0 text-xs opacity-80 transform transition-transform duration-300 group-hover:scale-110">โผ</span>
                    </div>
                    <div id="gwa-details" class="hidden w-full mt-4 pt-4 border-t border-white/20 text-sm font-medium animate-fade-in origin-top">
                        <div class="max-w-md mx-auto bg-black/10 rounded-lg p-4">
                            <h3 class="text-center text-xs uppercase tracking-widest text-plm-gold mb-3 font-bold">Calculation Breakdown</h3>
                            <div class="grid grid-cols-2 gap-y-2 text-sm">
                                <span class="opacity-80">Total Academic Units:</span><span class="text-right font-mono">{totalUnits}</span>
                                <span class="opacity-80">Total Grade Points:</span><span class="text-right font-mono">{totalGradePoints.toFixed(2)}</span>
                                <span class="opacity-80 border-t border-white/30 mt-2 pt-2">Formula:</span><span class="text-right border-t border-white/30 mt-2 pt-2 font-mono text-xs">{totalGradePoints.toFixed(2)} รท {totalUnits}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        ) : (
            <div class="text-center py-20 bg-gray-50 rounded-lg border border-gray-200">
                <p class="text-gray-500 italic text-lg">Please select a School Year and Semester to view your grades.</p>
            </div>
        )}

        <!-- GRADE BREAKDOWN MODAL -->
        <div id="grade-modal" class="fixed inset-0 z-[60] hidden flex items-center justify-center bg-black/50 backdrop-blur-sm opacity-0 transition-opacity duration-300">
            <div class="bg-white rounded-xl shadow-2xl w-full max-w-lg overflow-hidden transform scale-95 transition-transform duration-300 p-6 relative m-4 border border-gray-200">
                
                <!-- Modal Header -->
                <div class="text-center border-b border-gray-100 pb-4 mb-4">
                    <h3 id="modal-title" class="font-bold text-lg text-gray-800 leading-tight"></h3>
                    <div class="mt-2 text-sm">
                        <span class="text-gray-500 italic">GWA: </span>
                        <span id="modal-grade" class="text-xl font-bold text-plm-navy italic"></span>
                    </div>
                </div>

                <!-- Modal Content (Table) -->
                <div class="overflow-y-auto max-h-[50vh] pr-1">
                    <table class="w-full text-sm">
                        <thead>
                            <tr class="text-xs text-gray-500 border-b border-gray-100">
                                <th class="text-left py-2 font-medium">Components</th>
                                <th class="text-center py-2 font-medium">Score</th>
                                <th class="text-right py-2 font-medium">Percentages</th>
                            </tr>
                        </thead>
                        <tbody id="modal-body">
                            <!-- Rows will be injected by JS -->
                        </tbody>
                    </table>
                </div>

                <!-- Modal Footer -->
                <div class="mt-6 flex justify-center">
                    <button id="close-modal" class="bg-[#1e1e2f] text-white px-8 py-2 rounded-lg shadow-md hover:bg-plm-navy hover:shadow-lg transition-all text-sm font-medium">
                        Confirm
                    </button>
                </div>
            </div>
        </div>

    </main>

    <!-- SCRIPTS -->
    <script>
        // 1. Confirm/Switch Button Logic
        const confirmBtn = document.getElementById('confirm-btn');
        const yearSelect = document.getElementById('school-year') as HTMLSelectElement;
        const semSelect = document.getElementById('semester') as HTMLSelectElement;

        if (confirmBtn && yearSelect && semSelect) {
            confirmBtn.addEventListener('click', () => {
                const newUrl = new URL(window.location.href);
                newUrl.searchParams.set('year', yearSelect.value);
                newUrl.searchParams.set('sem', semSelect.value);
                window.location.href = newUrl.toString();
            });
        }

        // 2. Expandable GWA Footer Logic
        const gwaFooter = document.getElementById('gwa-footer');
        const gwaDetails = document.getElementById('gwa-details');
        const gwaIcon = document.getElementById('gwa-icon');

        if (gwaFooter && gwaDetails && gwaIcon) {
            gwaFooter.addEventListener('click', () => {
                gwaDetails.classList.toggle('hidden');
                gwaIcon.style.transform = gwaDetails.classList.contains('hidden') ? 'rotate(0deg)' : 'rotate(180deg)';
            });
        }

        // 3. Modal Logic
        const modal = document.getElementById('grade-modal');
        const closeModalBtn = document.getElementById('close-modal');
        const breakdownBtns = document.querySelectorAll('.view-breakdown-btn');
        const modalTitle = document.getElementById('modal-title');
        const modalGrade = document.getElementById('modal-grade');
        const modalBody = document.getElementById('modal-body');

        // UPDATED: Check for all elements to avoid 'Object is possibly null' errors
        if (modal && closeModalBtn && modalTitle && modalGrade && modalBody && breakdownBtns.length > 0) {
            // Function to open modal
            // ADDED: Types for parameters
            const openModal = (title: string, grade: string, breakdownData: BreakdownItem[]) => {
                modalTitle.textContent = title;
                modalGrade.textContent = grade;
                
                // Clear existing rows
                modalBody.innerHTML = '';

                // Populate rows
                breakdownData.forEach(item => {
                    const row = document.createElement('tr');
                    row.className = 'border-b border-gray-50 last:border-0 hover:bg-gray-50';
                    
                    // Add indentation for sub-items
                    const nameClass = item.isSubItem ? 'pl-6 text-gray-500' : 'font-medium text-gray-800';
                    
                    row.innerHTML = `
                        <td class="py-3 ${nameClass}">${item.name}</td>
                        <td class="py-3 text-center text-gray-600">${item.score}</td>
                        <td class="py-3 text-right text-gray-600">${item.percentage}</td>
                    `;
                    modalBody.appendChild(row);
                });

                modal.classList.remove('hidden');
                
                // Animation logic
                const modalContainer = modal.querySelector('div');
                if (modalContainer) {
                    setTimeout(() => {
                        modal.classList.remove('opacity-0');
                        modalContainer.classList.remove('scale-95');
                        modalContainer.classList.add('scale-100');
                    }, 10);
                }
            };

            // Function to close modal
            const closeModal = () => {
                const modalContainer = modal.querySelector('div');
                modal.classList.add('opacity-0');
                
                if (modalContainer) {
                    modalContainer.classList.remove('scale-100');
                    modalContainer.classList.add('scale-95');
                }
                
                setTimeout(() => {
                    modal.classList.add('hidden');
                }, 300);
            };

            // Attach listeners to subject buttons
            breakdownBtns.forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const target = e.currentTarget as HTMLButtonElement;
                    const title = target.dataset.title;
                    const grade = target.dataset.grade;
                    // CASTING JSON PARSE RESULT
                    const breakdown = JSON.parse(target.dataset.breakdown || '[]') as BreakdownItem[];
                    
                    if (breakdown.length > 0) {
                        // Pass explicitly typed data
                        openModal(title || '', grade || '', breakdown);
                    }
                });
            });

            closeModalBtn.addEventListener('click', closeModal);

            // Close when clicking outside
            modal.addEventListener('click', (e) => {
                if (e.target === modal) closeModal();
            });
        }
    </script>
</body>
</html>