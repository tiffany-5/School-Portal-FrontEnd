---
// --- IMPORTS ---
import plmLogo from "../assets/PLMLogo.webp";
import "../styles/global.css";
import { Image } from "astro:assets";

// --- 1. TYPE DEFINITIONS ---
interface StudentProfile {
    firstName: string;
    middleName: string;
    lastName: string;
    studentId: string;
    email: string;
    program: string;
    yearLevel: string;
    semester: string;
    studentType: string;
}



// --- 2. FETCH DATA (SIMULATED) ---
async function fetchStudentProfile(): Promise<StudentProfile> {
    return {
        firstName: "EMMANUEL",
        middleName: "-",
        lastName: "PEREZ",
        studentId: "2023-xxxxx",
        email: "eaperez2023@plm.edu.ph",
        program: "Bachelor of Science in Computer Science",
        yearLevel: "2",
        semester: "First Semester",
        studentType: "Irregular"
    };
}

const studentData = await fetchStudentProfile();
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PLM Student Portal - Personal Info</title>
    <link rel="icon" href={plmLogo.src} />
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@700&family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body class="bg-white font-sans min-h-screen flex flex-col text-gray-800">

    <!-- HEADER SECTION -->
    <header class="w-full bg-white shadow-sm z-50">
        <div class="flex justify-center py-4">
            <div class="w-15 h-15">
                 <Image src={plmLogo} alt="PLM Logo" class="w-full h-full object-contain" loading="eager" />
            </div>
        </div>
<div class="h-5 w-full bg-plm-navy border-b-9 border-[#991B1B]"></div>
        <nav class="border-y border-gray-200 py-2">
            <div class="max-w-7xl mx-auto px-4 flex justify-around md:justify-center md:gap-12 text-sm font-medium text-gray-700">
                <a href="/dashboard" class="px-6 py-2 rounded hover:text-plm-navy hover:bg-plm-navy/10 transition-all">Home</a>
                <a href="/student_schedule" class="px-6 py-2 rounded hover:text-plm-navy hover:bg-plm-navy/10 transition-all">Schedule</a>
                <a href="/grade" class="px-6 py-2 rounded hover:text-plm-navy hover:bg-plm-navy/20 transition-all">Grade</a>
                <a href="/enrollment" class="px-6 py-2 rounded hover:text-plm-navy hover:bg-plm-navy/10 transition-all">Enrollment</a>
                <a href="/personalinfo" class="bg-plm-navy text-white px-6 py-2 rounded shadow-sm hover:bg-opacity-90 transition-all">Personal Info</a>
                <a href="/change-password" class="px-6 py-2 rounded hover:text-plm-navy hover:bg-plm-navy/10 transition-all">Change Password</a>
            </div>
        </nav>

        <div class="bg-white border-b border-plm-gold/50 py-2">
            <div class="max-w-7xl mx-auto px-4 flex justify-between items-center text-sm">
                <span class="text-gray-800">
                    Signed in as: <span class="font-bold uppercase">{studentData.lastName}, {studentData.firstName}</span> <span class="font-bold">({studentData.studentId})</span>
                </span>
                <button class="text-[#991B1B] font-bold hover:underline text-xs tracking-wide">SIGN OUT</button>
            </div>
        </div>
    </header>

    <!-- MAIN CONTENT -->
    <main class="flex-grow w-full max-w-6xl mx-auto p-6 md:p-8">
        
        <h1 class="text-center text-2xl font-bold text-plm-navy mb-12 uppercase tracking-wide">My Personal Information</h1>

        <div class="flex flex-col md:flex-row gap-12 items-start justify-center">
            
            <!-- LEFT: Profile Picture Container -->
            <div class="w-full md:w-[220px] flex flex-col flex-shrink-0">
                <!-- Border container matching the reference -->
                <div class="w-full aspect-square border border-gray-800 bg-white p-1 relative">
                    <!-- Silhouette SVG Background -->
                    <div class="w-full h-full bg-white flex items-end justify-center overflow-hidden relative">
                        <svg class="w-full h-full text-gray-500" viewBox="0 0 24 24" fill="currentColor">
                            <path fill-rule="evenodd" d="M7.5 6a4.5 4.5 0 119 0 4.5 4.5 0 01-9 0zM3.751 20.105a8.25 8.25 0 0116.498 0 .75.75 0 01-.437.695A18.683 18.683 0 0112 22.5c-2.786 0-5.433-.608-7.812-1.7a.75.75 0 01-.437-.695z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    
                    <!-- Real Image Overlay (Appears on Hover) -->
                    <div class="absolute inset-1 overflow-hidden">
                        <img 
                            src={`https://api.dicebear.com/7.x/initials/svg?seed=${studentData.firstName}`} 
                            alt="Profile" 
                            class="w-full h-full object-cover opacity-0 hover:opacity-100 transition-opacity duration-300 bg-white"
                        />
                    </div>
                </div>
            </div>

            <!-- RIGHT: Form Fields -->
            <div class="w-full max-w-4xl grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-5">
                
                <!-- Row 1 -->
                <div class="flex flex-col gap-1">
                    <label class="text-plm-navy font-bold text-base">First Name</label>
                    <input type="text" value={studentData.firstName} readonly 
                        class="w-full border border-gray-400 rounded px-3 py-2 text-gray-800 bg-white focus:outline-none focus:border-plm-gold text-base" />
                </div>

                <div class="flex flex-col gap-1">
                    <label class="text-plm-navy font-bold text-base">Student No.</label>
                    <input type="text" value={studentData.studentId} readonly 
                        class="w-full border border-gray-400 rounded px-3 py-2 text-gray-800 bg-white focus:outline-none focus:border-plm-gold text-base" />
                </div>

                <!-- Row 2 -->
                <div class="flex flex-col gap-1">
                    <label class="text-plm-navy font-bold text-base">Middle Name</label>
                    <input type="text" value={studentData.middleName} readonly 
                        class="w-full border border-gray-400 rounded px-3 py-2 text-gray-800 bg-white focus:outline-none focus:border-plm-gold text-base" />
                </div>

                <div class="flex flex-col gap-1">
                    <label class="text-plm-navy font-bold text-base">Program</label>
                    <input type="text" value={studentData.program} readonly 
                        class="w-full border border-gray-400 rounded px-3 py-2 text-gray-800 bg-white focus:outline-none focus:border-plm-gold text-base" />
                </div>

                <!-- Row 3 -->
                <div class="flex flex-col gap-1">
                    <label class="text-plm-navy font-bold text-base">Last Name</label>
                    <input type="text" value={studentData.lastName} readonly 
                        class="w-full border border-gray-400 rounded px-3 py-2 text-gray-800 bg-white focus:outline-none focus:border-plm-gold text-base" />
                </div>

                <div class="flex flex-col gap-1">
                    <label class="text-plm-navy font-bold text-base">Year Level</label>
                    <input type="text" value={studentData.yearLevel} readonly 
                        class="w-full border border-gray-400 rounded px-3 py-2 text-gray-800 bg-white focus:outline-none focus:border-plm-gold text-base" />
                </div>

                <!-- Row 4 -->
                <div class="flex flex-col gap-1">
                    <label class="text-plm-navy font-bold text-base">Email Address</label>
                    <input type="text" value={studentData.email} readonly 
                        class="w-full border border-gray-400 rounded px-3 py-2 text-gray-800 bg-white focus:outline-none focus:border-plm-gold text-base" />
                </div>

                <div class="flex flex-col gap-1">
                    <label class="text-plm-navy font-bold text-base">Semester</label>
                    <input type="text" value={studentData.semester} readonly 
                        class="w-full border border-gray-400 rounded px-3 py-2 text-gray-800 bg-white focus:outline-none focus:border-plm-gold text-base" />
                </div>

                <!-- Row 5 -->
                <div class="hidden md:block"></div> <!-- Spacer -->

                <div class="flex flex-col gap-1">
                    <label class="text-plm-navy font-bold text-base">Student Type</label>
                    <input type="text" value={studentData.studentType} readonly 
                        class="w-full border border-gray-400 rounded px-3 py-2 text-gray-800 bg-white focus:outline-none focus:border-plm-gold text-base" />
                </div>

            </div>
        </div>

    </main>

</body>
</html>